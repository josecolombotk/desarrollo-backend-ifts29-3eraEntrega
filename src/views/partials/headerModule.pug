//- --- INICIO DEL CÓDIGO ÚNICO (CSS + PUG + JS) ---

//- --- 1. ESTILOS CSS (SIN CAMBIOS) ---
style.
  /* --- Variables de Color (Paleta Profesional) --- */
  :root {
    --color-primary: #006ab1;     /* Azul clínico principal */
    --color-primary-light: #e6f0f7;
    --color-text-dark: #1a2b48;   /* Azul-gris oscuro para texto */
    --color-text-light: #6b7f99; /* Gris para subtítulos */
    --color-bg-page: #f7f9fc;    /* Fondo de página (asumido) */
    --color-bg-header: #ffffff;  /* Fondo blanco para el header */
    --color-border: #eef2f6;     /* Borde sutil */
    --color-danger: #dc2626;     /* Rojo para logout/alertas */
    --shadow-sm: 0 4px 12px rgba(26, 43, 72, 0.06);
    --shadow-md: 0 6px 20px rgba(26, 43, 72, 0.1);
  }

  /* --- Contenedor Principal --- */
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 24px;
    background: var(--color-bg-header);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 28px;
  }

  /* --- Lado Izquierdo: Títulos --- */
  .header-primary {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .page-title {
    font-size: 2.1rem; /* Título grande */
    margin: 0;
    color: var(--color-text-dark);
    font-weight: 700;
  }

  /* --- Link de Home (Reemplaza Breadcrumbs) --- */
  .clinic-home-link {
    display: inline-flex; /* Ajusta al contenido */
    align-items: center;
    gap: 8px;
    font-size: 0.95rem;
    color: var(--color-primary); /* Azul principal */
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .clinic-home-link:hover {
    color: var(--color-text-dark); /* Oscurece al pasar el mouse */
  }
  .clinic-home-link i {
    font-size: 0.9rem; /* Tamaño del nuevo ícono */
  }


  /* --- Lado Derecho: Acciones y Usuario --- */
  .header-secondary {
    display: flex;
    align-items: center;
  }

  /* --- Menú de Usuario --- */
  .user-menu-container {
    position: relative;
  }
  
  .user-menu-trigger {
    display: flex;
    align-items: center;
    gap: 12px;
    background: transparent;
    border: none;
    border-radius: 8px;
    padding: 6px 10px;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  .user-menu-trigger:hover {
    background: var(--color-bg-page);
  }
  .user-menu-trigger .chevron-icon {
    font-size: 0.75rem;
    color: var(--color-text-light);
    transition: transform 0.2s ease;
  }
  .user-menu-container.open .chevron-icon {
    transform: rotate(180deg);
  }

  .user-avatar {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background: linear-gradient(135deg, #0b74b6, #0b4fa0);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1rem;
    flex-shrink: 0;
  }

  .user-details {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .user-name {
    font-weight: 600;
    color: var(--color-text-dark);
    font-size: 0.95rem;
    margin: 0;
  }
  .user-role {
    margin: 0;
  }

  /* --- Badges de Rol (Estilo "Pill") --- */
  .role-badge {
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .role-badge.administrativo {
    background: #fee2e2;
    color: #b91c1c;
  }
  .role-badge.medico {
    background: #d1fae5;
    color: #065f46;
  }
  .role-badge.paciente {
    background: #dbeafe;
    color: #1e3a8a;
  }

  /* --- El Dropdown (SIMPLIFICADO) --- */
  .user-menu-dropdown {
    display: none; /* Oculto por defecto */
    position: absolute;
    top: calc(100% + 8px);
    right: 0;
    background: var(--color-bg-header);
    border-radius: 10px;
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-md);
    width: 240px; /* Ancho ajustado */
    padding: 0; 
    z-index: 100;
    overflow: hidden; 
  }
  .user-menu-dropdown.open {
    display: block;
  }
  
  /* --- Cabecera del Dropdown (con Bienvenida) --- */
  .dropdown-header {
    padding: 14px 16px;
    border-bottom: 1px solid var(--color-border);
  }
  .dropdown-user-name {
    margin: 0 0 4px 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-text-dark);
  }
  .dropdown-user-role {
    margin: 0;
    font-size: 0.85rem;
    color: var(--color-text-light);
  }

  /* Contenido del Dropdown (solo el botón) */
  .dropdown-content {
    padding: 8px; /* Espacio alrededor del botón */
  }

  /* Botón de Logout */
  .dropdown-logout {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 10px 12px;
    font-size: 0.9rem;
    color: var(--color-danger) !important; /* Rojo */
    text-decoration: none;
    border-radius: 6px;
    width: 100%;
    border: none;
    background: transparent;
    cursor: pointer;
    text-align: left;
  }
  .dropdown-logout i {
    width: 16px;
    color: var(--color-danger) !important;
  }
  .dropdown-logout:hover {
    background: #fee2e2 !important; /* Fondo rojo claro */
  }

  /* --- Media Query (Ajustada) --- */
  @media (max-width: 968px) {
    .header-container {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }
    .header-secondary {
      width: 100%;
      display: flex;
      justify-content: flex-end; /* Alinea el menú de usuario a la derecha */
    }
    .page-title {
      font-size: 1.8rem; /* Ajuste para móvil */
    }
  }


//- --- 2. MIXIN PUG (ESTRUCTURA CORREGIDA) ---
//- Nota: Este mixin asume que tienes Font Awesome (para los íconos)
mixin pageHeader(user, pageTitle, clinicName = 'Clínica Salud Integral')

  //- Contenedor principal del header
  .header-container
    
    //- Lado izquierdo: Título y Link a Home
    .header-primary
      h1.page-title= pageTitle
      
      //- --- ¡CAMBIO AQUÍ! ---
      //- Lógica para definir el link de "Home" según el rol
      - let homeLink = '/' // Link por defecto (para Admin, etc.)
      case user.role
        when 'Medico'
          - homeLink = '/dashboard/medico'
        when 'Paciente'
          - homeLink = '/dashboard/paciente'
      
      //- El link ahora usa la variable 'homeLink'
      a.clinic-home-link(href=homeLink)
        i.fas.fa-clinic-medical
        span= clinicName
        
    //- Lado derecho: Solo Menú de Usuario
    .header-secondary
      
      //- Menú de Usuario (Componente con Dropdown)
      .user-menu-container
        
        //- El botón que abre el menú
        button.user-menu-trigger(onclick='toggleUserMenu()')
          .user-avatar= user.username.charAt(0).toUpperCase()
          .user-details
            p.user-name= user.username
            p.user-role
              span.role-badge(class=user.role.toLowerCase())= user.role
          i.fas.fa-chevron-down.chevron-icon
          
        //- El Dropdown (SIMPLIFICADO)
        #userDropdown.user-menu-dropdown
          //- Cabecera de bienvenida
          .dropdown-header
            p.dropdown-user-name= 'Bienvenido, ' + user.username
            p.dropdown-user-role= 'Rol: ' + user.role
          
          //- Contenido con el botón
          .dropdown-content
            button.dropdown-logout(onclick='logout()')
              i.fas.fa-sign-out-alt
              | Cerrar Sesión


//- --- 3. SCRIPTS (SIN CAMBIOS) ---
script.
  // Función para mostrar/ocultar el dropdown
  function toggleUserMenu() {
    const dropdown = document.getElementById('userDropdown');
    const container = dropdown.closest('.user-menu-container');
    dropdown.classList.toggle('open');
    container.classList.toggle('open');
  }

  // Cierra el menú si se hace clic fuera de él (Mejora de UX)
  window.onclick = function(event) {
    if (!event.target.closest('.user-menu-container')) {
      const dropdowns = document.getElementsByClassName('user-menu-dropdown');
      for (let i = 0; i < dropdowns.length; i++) {
        const openDropdown = dropdowns[i];
        if (openDropdown.classList.contains('open')) {
          openDropdown.classList.remove('open');
          openDropdown.closest('.user-menu-container').classList.remove('open');
        }
      }
    }
  }

  // Tu función de logout (sin cambios)
  async function logout(){
    try {
      const response = await fetch('/api/auth/logout', { method: 'POST' });
      const data = await response.json();
      if (response.ok) {
        localStorage.removeItem('authToken');
        window.location.href = '/login';
      } else {
        alert(data.message || 'Error al cerrar sesión');
      }
    } catch (e) {
      alert('Error de conexión: ' + e.message);
    }
  }

